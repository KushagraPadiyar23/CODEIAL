<li>
    <p>
       <% if(locals.user && locals.user.id==i.user.id){ %>    
        <small>
           <a href="/posts/destroy/<%=i.id%>">X</a>
        </small>   
       <%}%> 
           <%= i.content %>
           <br>
          <%= i.user.name%>
    </p>    
    <div id="posts-comments">
           <% if(locals.user){%>
                  <form action="/comments/create" method="POST">
                         <input type="text" name="content" required placeholder="type here to add comment.....">
                         <input type="hidden" name="post" value="<%= i._id %>">
                         <input type="submit" value="Add Comment">
                  </form>
            <%}%> 
            <div id="posts-comments-list">
                  <ul id="posts-comments-<%=i._id%>">
                         <% for(comment of i.comments){%>
                           <%- include('_comment') -%>
                               
                          <%}%>      
                  </ul>
            </div>     
    </div>   
</li>